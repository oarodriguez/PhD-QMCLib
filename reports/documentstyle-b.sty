\RequirePackage{ifthen}
\RequirePackage{ifxetex}
% \RequirePackage{xcolor}

\setsecheadstyle{\Large \bfseries}
\setsubsecheadstyle{\large \bfseries}
\setsubsubsecheadstyle{\normalfont \bfseries}
\setparaheadstyle{\normalfont}

\newlength{\chaptitlefontsize}
\newlength{\chaptitlenumsize}
\renewcommand{\chapnamefont}{\LARGE \bfseries}%
\renewcommand{\chapnumfont}{\LARGE \bfseries}%
\renewcommand{\chaptitlefont}{\bfseries}%

% *************** Chapter and section style ***************
\makechapterstyle{thesischapter}{%

  \chapterstyle{default}

  \setlength{\beforechapskip}{-10pt}
  \setlength{\afterchapskip}{30pt}
  \setlength{\midchapskip}{0pt}
  \setlength{\chaptitlefontsize}{30pt}
  \setlength{\chaptitlenumsize}{70pt}


  \renewcommand{\printchaptertitle}[1]{%
    %        \centering
    \chaptitlefont
    \ifxetex
      \chaptertitlefont
    \fi
    %        \hrule height 0.5pt
    %        \vspace{1pt}
    %        \hrule height 0.5pt
    \vspace{0.2em}%
    \hfill \parbox{0.6\linewidth}{\raggedleft \fontsize{\chaptitlefontsize}{0}\selectfont ##1}
    \vspace{0.5em}
    %        \hrule height 1.5pt%
    %        \vspace{1pt}
    %        \hrule height 1.5pt
  }%

  \renewcommand{\printchaptername}{
    \chapnamefont
    \ifxetex
      \chapternumberfont
    \fi
    %\@chapapp
  }

  \renewcommand*{\printchapternum}{%
    \chapnumfont
    \ifxetex
      \chapternumberfont
    \fi
    %\centering
    %        \numtoName{\c@chapter}
    \hfill {\color{Maroon}  \fontsize{\chaptitlenumsize}{0}\selectfont \thechapter}
  }%
}


\makechapterstyle{thesissimplechapter}{%

  \chapterstyle{default}

  \setlength{\beforechapskip}{-20pt}
  \setlength{\afterchapskip}{30pt}
  \setlength{\midchapskip}{0pt}
  \setlength{\chaptitlefontsize}{30pt}
  \setlength{\chaptitlenumsize}{70pt}


  \renewcommand{\printchaptertitle}[1]{%
    %        \centering
    \chaptitlefont
    \ifxetex
      \chaptertitlefont
    \fi

    \vspace{0em}
    \hfill \parbox{0.6\linewidth}{ \fontsize{\chaptitlefontsize}{0}\selectfont ##1}
    \vspace{0em}

  }

  \renewcommand{\printchaptername}{
    \chapnamefont
    \ifxetex
      \chapternumberfont
    \fi
    %\@chapapp
  }

  \renewcommand*{\printchapternum}{%
    \chapnumfont
    \ifxetex
      \chapternumberfont
    \fi
    \hfill {\color{Maroon}  \fontsize{\chaptitlenumsize}{0}\selectfont \thechapter}
  }%
}


